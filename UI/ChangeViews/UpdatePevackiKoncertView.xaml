                <ComboBoxItem>Solista</ComboBoxItem>
                <ComboBoxItem>Hor</ComboBoxItem>

            </ComboBox.Items>
        </ComboBox>

        <Button Click="buttonSubmit_Click" x:Name="buttonSubmit" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="50" Content="Izmeni" Width="100" Margin="0,0,0,20" />
    </Grid>
</Window>
